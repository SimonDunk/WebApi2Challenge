@{
    ViewData["Title"] = "Create Product";
}
<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-lg-12">
        <form action="javascript:void(0);" method="POST" onsubmit="addItem();" class="form-inline">
            <input type="text" id="add-description" placeholder="Description" class="form-control" />
            <input type="text" id="add-model" placeholder="Model" class="form-control" />
            <input type="text" id="add-brand" placeholder="Brand" class="form-control" />
            <input type="submit" value="Add" class="btn btn-primary" />
        </form>
    </div>
</div>
